<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp">

    <!-- Skeleton Image Placeholder -->
    <androidx.cardview.widget.CardView
        android:id="@+id/skeleton_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:elevation="6dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/skeleton_bg" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Skeleton Title -->
        <View
            android:id="@+id/skeleton_title"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/skeleton_bg" />

        <!-- Skeleton Description -->
        <View
            android:id="@+id/skeleton_description"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/skeleton_bg" />

        <!-- Skeleton Tags Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start">

            <View
                android:id="@+id/skeleton_tag1"
                android:layout_width="48dp"
                android:layout_height="12dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/skeleton_bg" />

            <View
                android:id="@+id/skeleton_tag2"
                android:layout_width="40dp"
                android:layout_height="12dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/skeleton_bg" />

            <View
                android:id="@+id/skeleton_tag3"
                android:layout_width="36dp"
                android:layout_height="12dp"
                android:background="@drawable/skeleton_bg" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
